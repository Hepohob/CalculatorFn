<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:weightSum="11">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="8" >

    <TextView
        android:id="@+id/signdisplay"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:gravity="center"
        android:inputType="none"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:textSize="@dimen/fn_textfontsize"
        android:textStyle="normal"
        tools:ignore="NestedWeights" />

    <TextView
        android:id="@+id/screen"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical|right"
        android:inputType="none"
        android:textColor="@android:color/black"
        android:background="#ffe0eef7"
        android:textSize="@dimen/campaign_textfontsize"
        android:textStyle="normal"
        android:text="@string/screenString"
        tools:ignore="RtlHardcoded" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginLeft="1dp"
        tools:ignore="RtlHardcoded">

        <Button
            android:id="@+id/buttonBackspace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/silverbutton"
            android:gravity="center"
            android:scaleType="fitStart"
            android:text="@string/stringButtonBackspace"
            android:textSize="@dimen/oper_textfontsize"
            android:textStyle="normal"
            android:textColor="#ff2948bf"
            android:onClick="onClickButtonBackspace"
            tools:ignore="NestedWeights" />

        <Button
            android:id="@+id/button1"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bluebutton"
            android:scaleType="fitCenter"
            android:textSize="@dimen/campaign_textfontsize"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:text="@string/stringButton1"
            android:onClick="onClickButton1"/>

        <Button
            android:id="@+id/button2"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bluebutton"
            android:scaleType="fitCenter"
            android:textSize="@dimen/campaign_textfontsize"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:onClick="onClickButton2"
            android:text="@string/stringButton2"/>

        <Button
            android:id="@+id/button3"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bluebutton"
            android:scaleType="fitCenter"
            android:textSize="@dimen/campaign_textfontsize"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:onClick="onClickButton3"
            android:text="@string/stringButton3"/>
        <!-- in the last row the "0" button will have layout_weight="2" NOT "1" -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginLeft="1dp">

        <Button
            android:id="@+id/buttonAC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/redbutton"
            android:scaleType="fitCenter"
            android:text="@string/stringButtonAC"
            android:textSize="@dimen/oper_textfontsize"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:onClick="onClickButtonAC"
            />

        <Button
            android:id="@+id/button4"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bluebutton"
            android:scaleType="fitCenter"
            android:textSize="@dimen/campaign_textfontsize"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:onClick="onClickButton4"
            android:text="@string/stringButton4"/>

        <Button
            android:id="@+id/button5"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bluebutton"
            android:scaleType="fitCenter"
            android:textSize="@dimen/campaign_textfontsize"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:onClick="onClickButton5"
            android:text="@string/stringButton5"/>

        <Button
            android:id="@+id/button6"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bluebutton"
            android:scaleType="fitCenter"
            android:textSize="@dimen/campaign_textfontsize"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:onClick="onClickButton6"
            android:text="@string/stringButton6"/>
        <!-- in the last row the "0" button will have layout_weight="2" NOT "1" -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginLeft="1dp">

        <Button
            android:id="@+id/buttonEmpty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            />

        <Button
            android:id="@+id/button7"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bluebutton"
            android:scaleType="fitCenter"
            android:textSize="@dimen/campaign_textfontsize"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:onClick="onClickButton7"
            android:text="@string/stringButton7"/>

        <Button
            android:id="@+id/button8"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bluebutton"
            android:scaleType="fitCenter"
            android:textSize="@dimen/campaign_textfontsize"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:onClick="onClickButton8"
            android:text="@string/stringButton8"/>

        <Button
            android:id="@+id/button9"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bluebutton"
            android:scaleType="fitCenter"
            android:textSize="@dimen/campaign_textfontsize"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:onClick="onClickButton9"
            android:text="@string/stringButton9"/>
        <!-- in the last row the "0" button will have layout_weight="2" NOT "1" -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginLeft="1dp">

        <Button
            android:id="@+id/buttonPlusMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/silverbutton"
            android:scaleType="fitCenter"
            android:text="@string/stringButtonPlusMinus"
            android:textSize="@dimen/oper_textfontsize"
            android:textStyle="normal"
            android:textColor="#ff2948bf"
            android:onClick="onClickButtonPlusMinus"
            />

        <Button
            android:id="@+id/button0"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bluebutton"
            android:scaleType="fitCenter"
            android:textSize="@dimen/campaign_textfontsize"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:onClick="onClickButton0"
            android:text="@string/stringButton0"/>

        <Button
            android:id="@+id/button00"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bluebutton"
            android:scaleType="fitCenter"
            android:textSize="@dimen/campaign_textfontsize"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:onClick="onClickButton00"
            android:text="@string/stringButton00"/>

        <Button
            android:id="@+id/buttonPoint"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bluebutton"
            android:scaleType="fitCenter"
            android:textSize="@dimen/campaign_textfontsize"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:onClick="onClickButtonPoint"
            android:text="@string/stringButtonPoint"/>
        <!-- in the last row the "0" button will have layout_weight="2" NOT "1" -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginLeft="1dp">

        <Button
            android:id="@+id/buttonMult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/silverbutton"
            android:scaleType="fitCenter"
            android:text="@string/stringButtonMult"
            android:textSize="@dimen/fn_textfontsize"
            android:textStyle="normal"
            android:textColor="#ff2948bf"
            android:onClick="onClickButtonMult"
            />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/silverbutton"
            android:scaleType="fitCenter"
            android:textSize="@dimen/oper_textfontsize"
            android:textStyle="normal"
            android:textColor="#ff2948bf"
            android:onClick="onClickButtonDivide"
            android:text="@string/stringButtonDivide"/>

        <Button
            android:id="@+id/buttonMinus"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/silverbutton"
            android:scaleType="fitCenter"
            android:textSize="@dimen/oper_textfontsize"
            android:textStyle="normal"
            android:textColor="#ff2948bf"
            android:onClick="onClickButtonMinus"
            android:text="@string/stringButtonMinus"/>

        <Button
            android:id="@+id/buttonPlus"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/silverbutton"
            android:scaleType="fitCenter"
            android:textSize="@dimen/oper_textfontsize"
            android:textStyle="normal"
            android:textColor="#ff2948bf"
            android:onClick="onClickButtonPlus"
            android:text="@string/stringButtonPlus"/>
        <!-- in the last row the "0" button will have layout_weight="2" NOT "1" -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginLeft="1dp">

        <Button
            android:id="@+id/buttonSQR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/silverbutton"
            android:scaleType="fitCenter"
            android:text="@string/stringButtonSQR"
            android:textSize="@dimen/oper_textfontsize"
            android:textStyle="normal"
            android:onClick="onClickButtonSQR"
            android:textColor="#ff2948bf"
            />

        <Button
            android:id="@+id/buttonMPlus"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/silverbutton"
            android:scaleType="fitCenter"
            android:textSize="@dimen/fn_textfontsize"
            android:textStyle="normal"
            android:textColor="#ff2948bf"
            android:onClick="onClickButtonMPlus"
            android:text="@string/stringButtonMPlus"/>

        <Button
            android:id="@+id/buttonMMinus"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/silverbutton"
            android:scaleType="fitCenter"
            android:textSize="@dimen/fn_textfontsize"
            android:textStyle="normal"
            android:textColor="#ff2948bf"
            android:onClick="onClickButtonMMinus"
            android:text="@string/stringButtonMMinus"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginLeft="1dp">

        <Button
            android:id="@+id/buttonPercent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/silverbutton"
            android:scaleType="fitCenter"
            android:text="@string/stringButtonPercent"
            android:textSize="@dimen/oper_textfontsize"
            android:textStyle="normal"
            android:textColor="#ff2948bf"
            android:alpha="0.5"
            android:enabled="false"
            android:onClick="onClickButtonPercent"
            />

        <Button
            android:id="@+id/buttonMRC"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/silverbutton"
            android:scaleType="fitCenter"
            android:textSize="@dimen/fn_textfontsize"
            android:textStyle="normal"
            android:textColor="#ff2948bf"
            android:alpha="0.5"
            android:enabled="false"
            android:onClick="onClickButtonMRC"
            android:text="@string/stringButtonMRC"/>

        <Button
            android:id="@+id/buttonEqual"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/silverbutton"
            android:scaleType="fitCenter"
            android:textSize="@dimen/campaign_textfontsize"
            android:textStyle="normal"
            android:textColor="#ff2948bf"
            android:onClick="onClickButtonEqual"
            android:text="@string/stringButtonEqual"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginLeft="1dp">

        <Button
            android:id="@+id/buttonF1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/darkblackbutton"
            android:scaleType="fitCenter"
            android:text="@string/stringButtonF1"
            android:textSize="@dimen/fn_textfontsize"
            android:textStyle="normal"
            android:textColor="#ff2948bf"
            android:onClick="onClickButtonF1"

            />
        <Button
            android:id="@+id/buttonF2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/darkblackbutton"
            android:scaleType="fitCenter"
            android:text="@string/stringButtonF2"
            android:textSize="@dimen/fn_textfontsize"
            android:textStyle="normal"
            android:textColor="#ff2948bf"
            android:onClick="onClickButtonF2"
            />
        <Button
            android:id="@+id/buttonF3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/darkblackbutton"
            android:scaleType="fitCenter"
            android:text="@string/stringButtonF3"
            android:textSize="@dimen/fn_textfontsize"
            android:textStyle="normal"
            android:textColor="#ff2948bf"
            android:onClick="onClickButtonF3"
            />
        <Button
            android:id="@+id/buttonF4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/darkblackbutton"
            android:scaleType="fitCenter"
            android:text="@string/stringButtonF4"
            android:textSize="@dimen/fn_textfontsize"
            android:textStyle="normal"
            android:textColor="#ff2948bf"
            android:onClick="onClickButtonF4"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginLeft="1dp">

        <Button
            android:id="@+id/buttonF5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/darkblackbutton"
            android:scaleType="fitCenter"
            android:text="@string/stringButtonF5"
            android:textSize="@dimen/fn_textfontsize"
            android:textStyle="normal"
            android:textColor="#ff2948bf"
            android:onClick="onClickButtonF5"
            />
        <Button
            android:id="@+id/buttonF6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/darkblackbutton"
            android:scaleType="fitCenter"
            android:text="@string/stringButtonF6"
            android:textSize="@dimen/fn_textfontsize"
            android:textStyle="normal"
            android:textColor="#ff2948bf"
            android:onClick="onClickButtonF6"
            />
        <Button
            android:id="@+id/buttonF7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/darkblackbutton"
            android:scaleType="fitCenter"
            android:text="@string/stringButtonF7"
            android:textSize="@dimen/fn_textfontsize"
            android:textStyle="normal"
            android:textColor="#ff2948bf"
            android:onClick="onClickButtonF7"
            />
        <Button
            android:id="@+id/buttonF8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/darkblackbutton"
            android:scaleType="fitCenter"
            android:text="@string/stringButtonF8"
            android:textSize="@dimen/fn_textfontsize"
            android:textStyle="normal"
            android:textColor="#ff2948bf"
            android:onClick="onClickButtonF8"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="horizontal"
        android:weightSum="1"
        android:scaleType="fitCenter">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
    </LinearLayout>

</LinearLayout>
